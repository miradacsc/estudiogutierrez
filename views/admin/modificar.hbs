<div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col">
        <h2>Modificar una novedad</h2>
    <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{novedad.id}}">
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="titulo" name="titulo" value="{{novedad.titulo}}">
      </div>
      <div class="mb-3">
        <textarea type="text" class="form-control" placeholder="subtitulo" rows="5" name="subtitulo">{{novedad.subtitulo}}</textarea>
      </div>
      <div class="mb-3">
                    <p> <label for="">Imagen <input type="file" name="imagen" id="imagen"></label></p>
                    <p>
                        <label for=""><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar la imagen actual</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
      <div class="mb-3">
        <textarea type="text" class="form-control" placeholder="cuerpo" rows="10" name="cuerpo">{{novedad.cuerpo}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Modificar</button>
    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
   </div>
  </div>
</div>